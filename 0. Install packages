# R version 4.4.1

# Install BioManager, remotes, and devtools
install.packages("BiocManager")
install.packages("remotes")
install.packages("devtools")

# Install packages with certain versions
remotes::install_version("Seurat", version = "5.1.0")
remotes::install_version("hdf5r", version = "1.3.11")
remotes::install_version("tidyverse", version = "2.0.0")
remotes::install_version("cowplot", version = "1.1.3")
remotes::install_version("reshape2", version = "1.4.4")
remotes::install_version("RColorBrewer", version = "1.1-3")
remotes::install_version("gplots", version = "3.2.0")
remotes::install_version("viridis", version = "0.6.5")
remotes::install_version("lme4", version = "1.1-35.5")
BiocManager::install("escape", version = "3.20") 
BiocManager::install("limma", version = "3.20")
BiocManager::install("S4Vectors", version = "3.20") 
BiocManager::install("BiocGenerics", version = "3.20") 
BiocManager::install("DelayedArray", version = "3.20") 
BiocManager::install("DelayedMatrixStats", version = "3.20") 
BiocManager::install("SingleCellExperiment", version = "3.20") 
BiocManager::install("SummarizedExperiment", version = "3.20") 
BiocManager::install("batchelor", version = "3.20") 
BiocManager::install("HDF5Array", version = "3.20") 
BiocManager::install("terra", version = "3.20") 
BiocManager::install("ggrastr", version = "3.20") 
devtools::install_github("cole-trapnell-lab/monocle3")
