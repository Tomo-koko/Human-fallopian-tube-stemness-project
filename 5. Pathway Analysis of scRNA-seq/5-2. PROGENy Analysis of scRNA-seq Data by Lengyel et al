
# Fix seed and figure font
set.seed(42)
theme_set(theme_gray(base_family = "Arial"))

# Execute PROGENy Analysis
progeny_results_len <- progeny(
                          expr = len_progeny_matrix,
                          scale = TRUE,
                          organism = "Human",
                          top = 100,
                          perm = 1,
                          verbose = TRUE,
                          assay_name = "normalized expression values"
                          )
